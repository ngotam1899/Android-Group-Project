<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!-- LinearLayout bắt đầu cho một trang app, bao gồm orientation="vertical" -> các element từ trên xuống dưới
         | Ngô Hoàng Minh Tâm | 4/4/2020 -->
    <TextView
        android:id="@+id/txt_Screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#504B4B"
        android:fontFamily="sans-serif-thin"
        android:gravity="end"
        android:textColor="#FFFFFF"
        android:textSize="200px" />
    <!-- TextView thể hiện màn hình tính toán của máy tính | Ngô Hoàng Minh Tâm | 2/4/2020 -->
    <LinearLayout
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- LinearLayout bắt đầu cho các button, gồm weightSum="5" vs orientation="vertical"-> 5 hàng
         | Ngô Hoàng Minh Tâm | 4/4/2020 -->
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <!-- LinearLayout bắt đầu cho các button, gồm weightSum="4" vs orientation="horizontal"-> 4 côt mỗi hàng
         | Ngô Hoàng Minh Tâm | 4/4/2020 -->
            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="7"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 7 của máy tính | Ngô Hoàng Minh Tâm | 3/4/2020 -->
            <Button
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="8"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 8 của máy tính | Huỳnh Minh Trí | 3/4/2020 -->
            <Button
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="9"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 9 của máy tính | Mai Trọng Tường | 3/4/2020 -->
            <Button
                android:id="@+id/btn_div"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_orange_border"
                android:fontFamily="sans-serif-thin"
                android:text="÷"
                android:textSize="150px" />
            <!-- Button thể hiện dấu chia của máy tính | Huỳnh Minh Trí | 3/4/2020 -->
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <!-- LinearLayout bắt đầu cho các button, gồm weightSum="4" vs orientation="horizontal"-> 4 côt mỗi hàng
         | Mai Trọng Tường | 4/4/2020 -->
            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="4"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 4 của máy tính | Ngô Hoàng Minh Tâm | 3/4/2020 -->

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="5"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 5 của máy tính | Huỳnh Minh Trí | 3/4/2020 -->
            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="6"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 6 của máy tính | Mai Trọng Tường | 3/4/2020 -->
            <Button
                android:id="@+id/btn_mul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_orange_border"
                android:fontFamily="sans-serif-thin"
                android:text="×"
                android:textSize="150px" />
            <!-- Button thể hiện dấu nhân của máy tính | Huỳnh Minh Trí | 3/4/2020 -->
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <!-- LinearLayout bắt đầu cho các button, gồm weightSum="4" vs orientation="horizontal"-> 4 côt mỗi hàng
            | Mai Trọng Tường | 4/4/2020 -->
            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="1"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 1 của máy tính | Mai Trọng Tường | 4/4/2020 -->

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="2"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 2 của máy tính | Mai Trọng Tường | 4/4/2020 -->
            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="3"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 3 của máy tính | Huỳnh Minh Trí | 4/4/2020 -->
            <Button
                android:id="@+id/btn_sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_orange_border"
                android:fontFamily="sans-serif-thin"
                android:text="−"
                android:textSize="150px" />
            <!-- Button thể hiện dấu trừ của máy tính | Huỳnh Minh Trí | 4/4/2020 -->

        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <!-- LinearLayout bắt đầu cho các button, gồm weightSum="4" vs orientation="horizontal"-> 4 côt mỗi hàng
            | Mai Trọng Tường | 4/4/2020 -->
            <Button
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-thin"
                android:text="0"
                android:textSize="150px" />
            <!-- Button thể hiện nút số 0 của máy tính | Mai Trọng Tường | 4/4/2020 -->
            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="sans-serif-medium"
                android:text="."
                android:textSize="150px" />
            <!-- Button thể hiện nút thập phân của máy tính | Ngô Hoàng Minh Tâm | 3/4/2020 -->

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_orange_border"
                android:fontFamily="sans-serif-thin"
                android:text="+"
                android:textSize="150px" />
            <!-- Button thể hiện dấu cộng của máy tính | Huỳnh Minh Trí | 3/4/2020 -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <!-- LinearLayout bắt đầu cho các button, gồm weightSum="4" vs orientation="horizontal"-> 4 côt mỗi hàng
             | Mai Trọng Tường | 4/4/2020 -->
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button_orange_border"
                android:fontFamily="sans-serif-thin"
                android:text="c"
                android:textSize="150px" />
            <!-- Button thể hiện nút số xóa màn hình của máy tính | Ngô Hoàng Minh Tâm | 3/4/2020 -->

            <Button
                android:id="@+id/btn_equa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button_orange_border"
                android:fontFamily="sans-serif-thin"
                android:text="="
                android:textSize="150px" />
            <!-- Button thể hiện dấu bằng của máy tính | Mai Trọng Tường | 4/4/2020 -->
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>